ALTER TABLE Daily_Log ADD "calorieseaten" INTEGER 
    DEFAULT "none";
    
SELECT*FROM Daily_Log;

UPDATE Daily_Log SET "calorieseaten" = 1800 WHERE "exercisetype" = "running";

SELECT*FROM Daily_Log;

DELETE FROM Daily_Log WHERE id=3;

